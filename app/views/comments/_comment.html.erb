
<div class="user-comment">
    <%= gravatar_image_tag(comment.user.email.gsub("spam", "mdeering"), alt: comment.user.name, gravatar: { size: 48 } ) %>
    <p><%= comment.user.name %></p>
    <p><%= comment.response%></p>
    <p><% if user_signed_in? && (current_user.id == comment.user_id ) %></p>
    <%= link_to "Delete", [comment.shot, comment], method: :delete, data: {confirm: "are you sure ?"}, class: "btn btn-danger"%>
    <%end%>
</div>